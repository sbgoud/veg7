{
  "expo": {
    "name": "veg7",
    "slug": "veg7",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/veg7logo.svg",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/veg7logo.svg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow veg7 to use your location for accurate delivery estimates and address selection."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby stores and calculate delivery times."
      },
      "bundleIdentifier": "com.proudindiaprime.veg7"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/veg7logo.svg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyB4E1bKJ2n1c8D7fGHIj3k4L5M6N7O8P9Q"
        }
      },
      "package": "com.proudindiaprime.veg7"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
